{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "build-dev",
            "type": "shell",
            "command": "make config=dev",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "lint",
            "type": "shell",
            "command": "make config=lint && make config=lint test",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "clean-all",
            "type": "shell",
            "command": "make clean-all",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "clean-dev",
            "type": "shell",
            "command": "make clean config=dev",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "run-app",
            "type": "shell",
            "command": "make run-app",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "run-app-dev",
            "type": "shell",
            "command": "make run-app config=dev",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "run-app-sdl-dev",
            "type": "shell",
            "command": "make run-app config=dev sdl=true",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "run-app-dev-ogles",
            "type": "shell",
            "command": "make run-app config=dev ogles=true",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "run-app-dev-ogles-wayland",
            "type": "shell",
            "command": "WAYLAND_DISPLAY=$(ls /run/user/$UID/ | grep wayland-[0-9]$) make run-app config=dev ogles=true wayland=true",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "test_",
            "type": "shell",
            "command": "make test",
            "problemMatcher": [],
            "dependsOn": "build",
            "group": "build"
        },
        {
            "label": "test-dev",
            "type": "shell",
            "command": "make test config=dev",
            "problemMatcher": [],
            "dependsOn": "build-dev",
            "group": "build"
        },
        {
            "label": "format",
            "type": "shell",
            "command": "make format",
            "problemMatcher": [],
            "group": "build"
        }
    ]
}