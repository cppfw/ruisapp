Source: libruisapp
Section: libs
Priority: extra
Maintainer: Ivan Gagis <igagis@gmail.com>
Build-Depends:
		debhelper (>= 9),
		prorab,
		prorab-extra,
		myci,
		clang-tidy,
		clang-format,
		libutki-dev (>= 1.1.124),
		libpapki-dev (>= 1.0.93),
		libruis-dev (>= 0.5.210),
		libr4-dev (>= 0.1.53),
		libglew-dev,
		libnitki-dev (>= 1.0.41),
		libruis-render-opengl-dev (>= 0.1.63),
		libruis-render-opengles-dev (>= 0.1.50),
		libegl1-mesa-dev,
		libgles2-mesa-dev,
		libgtk-3-dev
Build-Depends-Indep: doxygen
Standards-Version: 3.9.5

Package: ruisapp-test
Section: devel
Architecture: any
Depends: ${shlibs:Depends}, ${misc:Depends}, libruisapp$(soname)
Description: cross-platform C++ GUI library tests.
 GUI library tests.

Package: libruisapp-opengl$(soname)
Section: libs
Architecture: any
Depends: ${shlibs:Depends}, ${misc:Depends}
Description: cross-platform C++ GUI library.
 GUI library using OpenGL 2 rendering backend.

Package: libruisapp-opengles$(soname)
Section: libs
Architecture: any
Depends: ${shlibs:Depends}, ${misc:Depends}
Description: cross-platform C++ GUI library.
 GUI library using OpenGL 2 rendering backend.

Package: libruisapp-dev
Section: libdevel
Architecture: any
Depends:
		libruisapp-opengl$(soname) (= ${binary:Version}),
		libruisapp-opengl$(soname)-dbg (= ${binary:Version}),
		libruisapp-opengles$(soname) (= ${binary:Version}),
		libruisapp-opengles$(soname)-dbg (= ${binary:Version}),
		${misc:Depends},
		libutki-dev,
		libruis-dev,
		libpapki-dev
Suggests: libruisapp-doc
Description: cross-platform C++ GUI library.
 GUI library development files.

Package: libruisapp-doc
Architecture: all
Section: doc
Depends: ${misc:Depends}
Description: documentation for libruisapp library.
 For more details see description to libruisapp-dev package.
