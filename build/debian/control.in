Source: libruisapp
Section: libs
Priority: extra
Maintainer: Ivan Gagis <igagis@gmail.com>
Build-Depends:
		debhelper (>= 9),
		prorab,
		prorab-extra,
		myci,
		clang-tidy,
		clang-format,
		libutki-dev (>= 1.1.124),
		libfsif-dev (>= 1.0.93),
		libruis-dev (>= 0.5.210),
		libr4-dev (>= 0.1.53),
		libglew-dev,
		libnitki-dev (>= 1.0.41),
		libruis-render-opengl-dev (>= 0.1.63),
		libruis-render-opengles-dev (>= 0.1.50),
		libegl1-mesa-dev,
		libgtk-3-dev,
		libwayland-dev,
		libxkbcommon-dev,
		libsdl2-dev
Build-Depends-Indep: doxygen
Standards-Version: 3.9.5

Package: libruisapp-opengl-xorg$(soname)
Section: libs
Architecture: any
Depends:
	${shlibs:Depends},
	${misc:Depends}
Description: cross-platform C++ GUI library.
	GUI library using OpenGL rendering backend and xorg server.

