	libruisapp-opengles-wayland$(soname)-dbgsym (= ${binary:Version}),
	libruisapp-opengl-xorg-dbg$(soname)-dbgsym (= ${binary:Version}),
	libruisapp-opengles-xorg-dbg$(soname)-dbgsym (= ${binary:Version}),
